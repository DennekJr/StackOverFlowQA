@model StackOverFlowQA.Models.Answer

@{
    ViewData["Title"] = "CreateAnswer";
}

<h1>CreateAnswer</h1>

<h4>@ViewBag.QuestionToAnswer.Description</h4>
<h4>Answer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAnswer" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <TextArea name="details" asp-for="Description" class="form-control"></TextArea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" asp-route-Qid="@ViewBag.QuestionToAnswer.Id" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

